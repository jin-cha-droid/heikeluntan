    <script>
        // 使用IP API来获取用户的地理位置
        async function checkUserIP() {
            try {
                // 使用 fast 的IP地理位置 API
                const response = await fetch('https://ipapi.co/json/'); // 也可以使用其他快速IP服务，例如 ipify
                const data = await response.json();

                // 检查是否在中国之外
                if (data.country !== 'CN') {
                    showPopup();
                }
            } catch (error) {
                console.error('无法获取IP地址信息', error);
            }
        }

        function showPopup() {
            // 添加模糊效果
            const contentContainer = document.getElementById('content-container');
            contentContainer.classList.add('blur');

            // 激活弹窗的动画
            const popup = document.getElementById('popup');
            popup.classList.add('active');
        }

        // 页面加载完成后执行IP检查
        window.onload = checkUserIP;

        ajax({
            url: "/json/download.json",
            method: "GET",
            success: function(download) {
                download = JSON.parse(download);
                let operationCreative = document.querySelector(`.modal-content-creative .operation`);
                let operationCommunity = document.querySelector(`.modal-content-community .operation`);

                // 为新创下载弹窗插入选项
                // 假设 ajax 请求成功返回的 JSON 数据已存储在变量 downloadData 中
                // 这里模拟使用 AJAX 请求获取的数据，实际使用时替换为 AJAX 请求获取的数据


                function insertDownloadLinks() {
                    // 定义下载链接的顺序
                    const order = ["android", "android44", "windowsX64", "windowsX32", "bpreAndroid", "bpreAndroidBeta", "bpreWindows", "bpreWindowsBeta"];

                    // 分别获取两个弹窗的操作区域
                    const operationCreative = document.querySelector(`.modal-content-creative .operation`);
                    const operationCommunity = document.querySelector(`.modal-content-community .operation`);

                    // 清空现有的内容
                    operationCreative.innerHTML = '';
                    operationCommunity.innerHTML = '';

                    // 遍历顺序数组，将下载链接插入到相应的弹窗中
                    order.forEach((key, index) => {
                        // 根据key判断应使用的图标
                        const iconClass = (key.includes('android') || key === 'bpreAndroid' || key === "bpreAndroidBeta") ? 'fa-android' : 'fa-windows';

                        // 创建链接元素
                        const linkElement = `
<a class="choose" href="${download[key].link}">
    <i class="fa-brands ${iconClass}"></i>
    <p>${download[key].displayName}</p>
</a>`;

                        // 根据索引决定插入的位置，前四个是新创下载，后两个是社区版下载
                        if (index < 4) {
                            operationCreative.innerHTML += linkElement;
                            // 只为前三个新创下载选项添加分割线
                            if (index < 3) operationCreative.innerHTML += '<hr>';
                        } else {
                            operationCommunity.innerHTML += linkElement;
                            // 为社区版的第一个选项后添加分割线
                            if (index < 7) operationCommunity.innerHTML += '<hr>';
                        }
                    });
                }

                insertDownloadLinks();
            }
        }); //这段代码一运行就会发送请求
    </script>
